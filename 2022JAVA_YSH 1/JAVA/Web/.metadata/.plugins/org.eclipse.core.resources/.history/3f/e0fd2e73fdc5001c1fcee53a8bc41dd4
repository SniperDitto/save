package Pkg.DB;

import java.sql.CallableStatement;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.util.ArrayList;
import java.util.Hashtable;

public class DBConn {
	
	//1. procedure(callablestatement) / inline query(preparedstatement)
	
	//2. select(cursor,resultset) / 그 외
	
	private static String id;
	private static String pw;
	private static String url;
	
	public static Connection getConnection() {
		Connection conn = null;
		
		try {
			
			Class.forName("oracle.jdbc.driver.OracleDriver");
			conn = DriverManager.getConnection(url,id,pw);
			
		} catch (Exception e) {
			e.printStackTrace();
		}
		
		return conn;
	}
	
	public static PreparedStatement getPreparedStatement(String sql, ArrayList<String> params) {
		Connection conn = null;
		PreparedStatement ps = null;
		
		try {
			conn = getConnection();
			ps = conn.prepareStatement(sql);
			
			for(int i=0;i<params.size();i++) {
				ps.setString(i+1, params.get(i));
			}
			
		} catch (Exception e) {
			e.printStackTrace();
		}
		
		return ps;
	}
	
	public static CallableStatement getCallableStatement(String proc, ArrayList<String> params) {
		Connection conn = null;
		CallableStatement cs = null;
		
		try {
			conn = getConnection();
			cs = conn.prepareCall(proc);
			
			for(int i=0;i<params.size();i++) {
				cs.setString(i+1, params.get(i));
			}
			
		} catch (Exception e) {
			e.printStackTrace();
		}
		
		return cs;
	}
	
	public static Hashtable<String, String> selectData(String sql, ArrayList<String> params, boolean isProc){
		Hashtable<String, String> result = null;
		
		try {
			
		} catch (Exception e) {
			
		}
		
		return result;
	}
	
}
